  <!-- Tombol Download -->
  <a class="download-btn" onclick="downloadPDF()">Download CV (PDF)</a>

  <script>
    async function downloadPDF() {
      const { jsPDF } = window.jspdf;
      const cvElement = document.getElementById("cv-content");

      // Render halaman jadi canvas
      const canvas = await html2canvas(cvElement, { 
        scale: 2,
        useCORS: true // penting supaya gambar dari internet ikut
      });
      const imgData = canvas.toDataURL("image/png");

      // Buat PDF baru ukuran A4
      const pdf = new jsPDF("p", "mm", "a4");
      const pageWidth = pdf.internal.pageSize.getWidth();
      const pageHeight = pdf.internal.pageSize.getHeight();

      // Skala gambar agar pas A4
      const imgWidth = pageWidth;
      const imgHeight = (canvas.height * imgWidth) / canvas.width;

      pdf.addImage(imgData, "PNG", 0, 0, imgWidth, imgHeight);

      // Simpan PDF
      pdf.save("CV_Daniel_Fortunatus.pdf");
    }
  </script>
